        <li class=" @(action == "Index" ? "active" : "")">
            @Html.ActionLink("Home", "Index", "Home", new { area = "" }, new { @class = "nav-link" })
        </li>
        <li class=" @(action == "About" ? "active" : "")">
            @Html.ActionLink("Informazioni", "About", "Home", new { area = "" }, new { @class = "nav-link" })
